# Appwrite Configuration
# Copy this file to .env.local and update with your actual values

# Appwrite Project Settings
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://fra.cloud.appwrite.io/v1
NEXT_PUBLIC_APPWRITE_PROJECT_ID=687398a90012d5a8d92f

# Database Settings
NEXT_PUBLIC_APPWRITE_DATABASE_ID=687399d400185ad33867

# Collection IDs (these match the collections we created)
NEXT_PUBLIC_APPWRITE_USERS_COLLECTION_ID=users
NEXT_PUBLIC_APPWRITE_PROVIDERS_COLLECTION_ID=providers
NEXT_PUBLIC_APPWRITE_CUSTOMERS_COLLECTION_ID=customers
NEXT_PUBLIC_APPWRITE_DEVICES_COLLECTION_ID=devices
NEXT_PUBLIC_APPWRITE_SERVICES_COLLECTION_ID=services
NEXT_PUBLIC_APPWRITE_BOOKINGS_COLLECTION_ID=bookings
NEXT_PUBLIC_APPWRITE_MESSAGES_COLLECTION_ID=messages
NEXT_PUBLIC_APPWRITE_PAYMENTS_COLLECTION_ID=payments

# Google OAuth Configuration (for Appwrite)
# These need to be configured in your Appwrite project console
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
NEXT_PUBLIC_GOOGLE_OAUTH_ENABLED=true

# Domain Configuration
# Production domain for OAuth callbacks
NEXT_PUBLIC_APP_URL=https://sniket.com
# Development fallback
NEXT_PUBLIC_DEV_APP_URL=http://localhost:3000

# Razorpay Configuration
RAZORPAY_KEY_ID=rzp_test_your_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_secret_key_here

# Optional: API Key for server-side operations (if needed)
# APPWRITE_API_KEY=your_api_key_here

# Resend Email Configuration
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=notifications@sniket.com 